# Ensure package-lock.json is always updated
package-lock=true

# Use exact versions for better reproducibility
save-exact=false

# Increase network timeout for slow connections
fetch-timeout=300000

# Retry failed installations
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Enable strict peer dependencies checking
strict-peer-dependencies=false

# Automatically install peer dependencies
auto-install-peers=true

# Use legacy peer deps resolution for compatibility
legacy-peer-deps=false

# Prefer offline cache when available
prefer-offline=false

# Progress bar for better visibility
progress=true

# Audit level
audit-level=moderate